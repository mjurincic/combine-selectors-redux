{
  "name": "combine-selectors-redux",
  "version": "0.0.2",
  "description": "Utility function for combining selectors when working with redux. Much like combineReducers it helps for defining selector functions within the reducers.",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "src",
    "es"
  ],
  "repository": "git@github.com:tapayne88/combine-selectors-redux.git",
  "author": "Tom Payne",
  "license": "MIT",
  "keywords": [
    "redux",
    "reducer",
    "state",
    "predictable",
    "functional",
    "immutable",
    "flux",
    "reselect"
  ],
  "devDependencies": {
    "@types/node": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "prettier": "^1.17.1",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "compile:commonjs": "NODE_ENV=commonjs babel --out-dir lib src",
    "compile:es": "NODE_ENV=es babel --out-dir es src",
    "compile": "yarn compile:commonjs && yarn compile:es",
    "lint": "eslint '**/*.{js,ts}'",
    "jest": "jest",
    "postcommit": "yarn prettier",
    "prepublish": "yarn test && yarn compile",
    "postpublish": "git push && git push --tags",
    "prettier:list": "prettier '**/*.{js,json,ts}' --list-different",
    "prettier": "yarn prettier:list --write",
    "test": "yarn lint && yarn prettier:list && yarn jest"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "prefer-interface": "off"
    }
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "commonjs": {
        "presets": [
          "env"
        ]
      },
      "es": {
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ]
        ]
      }
    },
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "testMatch": [
      "**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/__mocks__/"
    ]
  }
}
