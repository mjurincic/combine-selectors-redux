{
  "name": "combine-selectors-redux",
  "version": "0.0.1",
  "description": "Utility function for combining selectors when working with redux. Much like combineReducers it helps for defining selector functions within the reducers.",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "src",
    "es"
  ],
  "repository": "git@github.com:tapayne88/combine-selectors-redux.git",
  "author": "Tom Payne",
  "license": "MIT",
  "keywords": [
    "redux",
    "reducer",
    "state",
    "predictable",
    "functional",
    "immutable",
    "flux",
    "reselect"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.12.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "prettier": "^1.8.2"
  },
  "scripts": {
    "compile:commonjs": "NODE_ENV=commonjs babel --out-dir lib src",
    "compile:es": "NODE_ENV=es babel --out-dir es src",
    "compile": "yarn run compile:commonjs && yarn run compile:es",
    "lint": "eslint -- '{src,tests}/**/*js'",
    "jest": "jest",
    "postcommit": "yarn run prettier",
    "prepublish": "yarn run test && yarn run compile",
    "postpublish": "git push && git push --tags",
    "prettier": "yarn run prettier:base --write",
    "prettier:list": "yarn run prettier:base --list-different",
    "prettier:base": "prettier '{src,tests}/**/*.js'",
    "test": "yarn run lint && yarn run prettier:list && yarn run jest"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended"
    ],
    "root": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "commonjs": {
        "presets": [
          "env"
        ]
      },
      "es": {
        "presets": [
          ["env", {"modules": false}]
        ]
      }
    },
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "testMatch": [
      "**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/__mocks__/"
    ]
  }
}
